<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.PropolisStock" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Primary colors -->
        <item name="android:colorPrimary">@color/primary_red</item>
        <item name="android:colorPrimaryDark">@color/primary_dark_red</item>
        <item name="android:colorAccent">@color/primary_light_blue</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/primary_cream</item>
        <item name="android:windowBackground">@color/primary_cream</item>
        
        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/primary_dark_red</item>
        <item name="android:navigationBarColor">@color/primary_dark_blue</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>